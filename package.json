{
  "author": "Luis Alfonso",
  "description": "Simple webapp to see your user's Spotify statistics.",
  "license": "ISC",
  "main": "src/server/server.js",
  "name": "spotify-stats",
  "version": "1.0.0",
  "scripts": {
    "build": "NODE_ENV=production; webpack",
    "dev": "nodemon src/server/server.js",
    "lint": "eslint ./",
    "openCoverage": "open ./coverage/lcov-report/index.html",
    "postinstall": "npm run build",
    "scan": "nsp check",
    "start": "NODE_ENV=production; node src/server/server.js",
    "test": "NODE_ENV=test; jest --coverage; npm run openCoverage",
    "testUpdate": "NODE_ENV=test; jest --coverage --updateSnapshot; npm run openCoverage"
  },
  "babel": {
    "env": {
      "production": {
        "plugins": [
          "lodash",
          [
            "direct-import",
            [
              "semantic-ui-react",
              {
                "name": "semantic-ui-react",
                "indexFile": "semantic-ui-react/dist/es/index.js"
              },
              "react-router",
              "react-router-dom"
            ]
          ]
        ]
      }
    },
    "plugins": [
      "react-hot-loader/babel"
    ],
    "presets": [
      "env",
      "stage-2",
      "react"
    ]
  },
  "eslintConfig": {
    "env": {
      "jest": true
    },
    "extends": "airbnb",
    "globals": {
      "document": true,
      "Event": true,
      "window": true
    },
    "parser": "babel-eslint",
    "rules": {
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "to"
          ]
        }
      ],
      "max-len": [
        "error",
        {
          "code": 80
        }
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_json"
          ]
        }
      ],
      "object-curly-newline": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run scan && npm run lint",
      "pre-push": "npm run scan && npm run lint && npm test"
    }
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/test/",
      "test-setup.js",
      "webpack.config.js"
    ],
    "setupTestFrameworkScriptFile": "./test-setup.js"
  },
  "nodemonConfig": {
    "ignore": [
      "src/app/*",
      "src/test/*"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "config": "^1.29.4",
    "cookie-session": "^2.0.0-beta.3",
    "express": "^4.16.2",
    "helmet": "^3.12.0",
    "joi": "^13.1.2",
    "lodash": "^4.17.5",
    "passport": "^0.4.0",
    "passport-spotify": "^1.0.0",
    "prop-types": "^15.6.0",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-hot-loader": "^4.0.1",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0",
    "semantic-ui-less": "^2.2.14",
    "semantic-ui-react": "^0.79.1",
    "superagent": "^3.8.2",
    "swagger-jsdoc": "^1.9.7",
    "webpack": "^3.11.0",
    "webpack-dev-middleware": "^2.0.6",
    "webpack-hot-middleware": "^2.22.0",
    "whatwg-fetch": "^2.0.3",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^22.2.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-direct-import": "^0.5.0",
    "babel-plugin-lodash": "^3.3.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "compression-webpack-plugin": "^1.1.11",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.9",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^4.17.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.15.0-rc.8",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "less": "^2.7.2",
    "less-loader": "^4.0.5",
    "nock": "^9.2.3",
    "nodemon": "^1.14.12",
    "nsp": "^3.2.1",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^16.2.0",
    "redux-mock-store": "^1.5.1",
    "style-loader": "^0.20.1",
    "supertest": "^3.0.0",
    "webpack-bundle-analyzer": "^2.11.1"
  }
}
